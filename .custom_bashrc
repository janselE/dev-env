# export TERM=xterm-256color
#
# Colors
RESET='\[\033[0m\]'
BOLD='\[\033[1m\]'
RED='\[\033[0;31m\]'
GREEN='\[\033[0;32m\]'
YELLOW='\[\033[0;33m\]'
BLUE='\[\033[0;34m\]'
MAGENTA='\[\033[0;35m\]'
CYAN='\[\033[0;36m\]'

# sets colors
color_prompt=yes

# Function to get the current Git branch
parse_git_branch() {
    git rev-parse --abbrev-ref HEAD 2>/dev/null

}

if [ "$color_prompt" = yes ]; then
    PS1="${debian_chroot:+($debian_chroot)}${BOLD}${GREEN}\u${RESET}@${CYAN}\h${RESET}:${BLUE}\w${RESET} \$(branch=\$(parse_git_branch); [ -n \"\$branch\" ] && echo \" ${YELLOW} \$branch${RESET}\")\n➜ "

else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi


# Aliases
alias ls="eza -a --color=always --git --no-filesize --icons=always --no-time --no-user --no-permissions"
alias scan='ncdu'
alias tree="eza --tree"
alias cat='bat --paging=never'
alias vim='nvim'

# tmux aliases
alias t='TERM=screen-256color-bce tmux'
alias ta='TERM=screen-256color-bce tmux a -t'
alias tls='TERM=screen-256color-bce tmux ls'
alias tn='TERM=screen-256color-bce tmux new -t'

# Vim mode in bash
set -o vi
bind '"jk":vi-movement-mode'


# -- Use fd instead of fzf --
export FZF_DEFAULT_COMMAND="fdfind --hidden --strip-cwd-prefix --exclude .git"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND="fdfind --type=d --hidden --strip-cwd-prefix --exclude .git"


# Use fd (https://github.com/sharkdp/fd) for listing path candidates.
# - The first argument to the function ($1) is the base path to start traversal
# - See the source code (completion.{bash,zsh}) for the details.
_fzf_compgen_path() {
  fdfind --hidden --exclude .git . "$1"
}

# Use fd to generate the list for directory completion
_fzf_compgen_dir() {
  fdfind --type=d --hidden --exclude .git . "$1"
}

# source ~/fzf-git/fzf-git.sh

show_file_or_dir_preview="if [ -d {} ]; then eza --tree --color=always {} | head -200; else bat -n --color=always --line-range :500 {}; fi"

export FZF_CTRL_T_OPTS="--preview '$show_file_or_dir_preview'"
export FZF_ALT_C_OPTS="--preview 'eza --tree --color=always {} | head -200'"

# Advanced customization of fzf options via _fzf_comprun function
# - The first argument to the function is the name of the command.
# - You should make sure to pass the rest of the arguments to fzf.
_fzf_comprun() {
  local command=$1
  shift

  case "$command" in
    cd)           fzf --preview 'eza --tree --color=always {} | head -200' "$@" ;;
    export|unset) fzf --preview "eval 'echo \${}'"         "$@" ;;
    ssh)          fzf --preview 'dig {}'                   "$@" ;;
    *)            fzf --preview "$show_file_or_dir_preview" "$@" ;;
  esac
}

# simlink to fd
# ln -s $(which fdfind) ~/.local/bin/fd
LINK="$HOME/.local/bin/fd"
TARGET="$(which fdfind)"

# Create symlink only if it doesn't already exist or is incorrect
if [ ! -L "$LINK" ] || [ "$(readlink "$LINK")" != "$TARGET" ]; then
  ln -sf "$TARGET" "$LINK"
fi


# setting zoxide (keep at the end)
eval "$(zoxide init --cmd cd bash)"

